{
    "user": "demo@clide",
    "directory": "/",
    "typespeed": 100,
    "humanize": 0.9,
    "hideWarnings": false,
    "clearBeforeAll": false,
    "keyTriggerAll": false,
    "triggerKeys": [
        "/",
        "z",
        "1"
    ],
    "commands": [
        {
            "cmd": "echo Welcome to the Clide demo!",
            "typed": true,
            "clearBeforeRun": true,
            "window": 1,
            "predelay": 500,
            "postdelay": 800
        },
        {
            "cmd": "echo Clide can automate shell commands using timings! I'll wait a few seconds before the next command. . .",
            "typed": true,
            "window": 1,
            "predelay": 500,
            "postdelay": 1000
        },
        {
            "cmd": "echo Clide can also trigger on key press. The next command won't run until you press '/', 'z', or '1'.",
            "typed": true,
            "window": 1,
            "predelay": 5000
        },
        {
            "cmd": "whoami",
            "waitForKey": true,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "echo Clide can also set a timeout for commands that run forever",
            "typed": true,
            "window": 1,
            "predelay": 500,
            "postdelay": 1000
        },
        {
            "cmd": "ping google.com",
            "typed": true,
            "clearBeforeRun": true,
            "window": 1,
            "predelay": 500,
            "postdelay": 1200,
            "timeout": 5
        },
        {
            "cmd": "echo You can also run hidden commands that will run in the background!",
            "typed": true,
            "clearBeforeRun": true,
            "window": 1,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "echo Creating newFile.txt in the background",
            "typed": true,
            "window": 1,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "touch newFile.txt",
            "hidden": true,
            "window": 1
        },
        {
            "cmd": "ls",
            "typed": true,
            "window": 1,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "echo You can see newFile.txt was created! Now we can get rid of it.",
            "typed": true,
            "window": 1,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "rm newFile.txt",
            "typed": true,
            "window": 1,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "echo Check out the json files in the projects '/examples' directory to see more demos and to look at example json configurations.",
            "typed": true,
            "clearBeforeRun": true,
            "window": 1,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "echo Thanks for checking out Clide, hopefully it will simplify your next CLI demo.",
            "typed": true,
            "window": 1,
            "predelay": 1000,
            "postdelay": 1000
        },
        {
            "cmd": "clear",
            "window": 1,
            "predelay": 3000
        }
    ]
}